<div class="header"><%- include("partials/header") %></div>

<div class="min-h-screen py-8 px-4">
  <div class="max-w-3xl mx-auto">
    <!-- Page Title with decorative accent -->
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-2">
        <div class="h-8 w-1 bg-gradient-to-b from-[#2193b0] to-[#6dd5ed] rounded-full"></div>
        <h1 class="text-4xl font-bold text-gray-800">Compose</h1>
      </div>
      <p class="text-gray-600 ml-4">Share your thoughts with the world</p>
    </div>

    <!-- Form Card -->
    <form action="/compose" method="POST" class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
      <!-- Title Input -->
      <div id="titleDiv" class="mb-6">
        <label class="block text-sm font-semibold text-gray-700 mb-2">
          Title
          <span class="text-red-500">*</span>
        </label>
        <input 
          type="text" 
          id="postTitle" 
          name="postTitle" 
          placeholder="Enter an engaging title..." 
          autocomplete="off" 
          required
          class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 
                 focus:outline-none focus:border-[#2193b0] focus:ring-4 focus:ring-[#2193b0]/10 
                 transition-all duration-200" 
        />
      </div>

      <!-- Message Textarea -->
      <div id="messageDiv" class="mb-6">
        <label class="block text-sm font-semibold text-gray-700 mb-2">
          Message
          <span class="text-red-500">*</span>
        </label>
        <textarea 
          id="postBody" 
          name="postBody" 
          placeholder="What's on your mind?" 
          required
          rows="8"
          class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 
                 focus:outline-none focus:border-[#2193b0] focus:ring-4 focus:ring-[#2193b0]/10 
                 transition-all duration-200 resize-y min-h-[160px]"
        ></textarea>
      </div>

      <!-- Action Buttons -->
      <div class="flex items-center justify-between pt-4 border-t border-gray-100">
        <div class="text-sm text-gray-500">
          <span class="font-medium">Tip:</span> Use clear, descriptive titles
        </div>
        <button 
          type="submit" 
          class="bg-gradient-to-r from-[#2193b0] to-[#6dd5ed] text-white font-semibold 
                 px-6 py-3 rounded-lg shadow-md hover:shadow-xl 
                 hover:scale-105 active:scale-95 
                 transition-all duration-200 
                 focus:outline-none focus:ring-4 focus:ring-[#2193b0]/30"
        >
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
            </svg>
            Publish Post
          </span>
        </button>
      </div>
    </form>

    <!-- Optional: Info Card -->
    <div class="mt-6 bg-blue-50 border border-blue-100 rounded-lg p-4">
      <div class="flex gap-3">
        <svg class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        <div>
          <h3 class="text-sm font-semibold text-blue-900 mb-1">Writing Guidelines</h3>
          <p class="text-sm text-blue-700">Be respectful, authentic, and creative. Your post will be visible to all readers.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>