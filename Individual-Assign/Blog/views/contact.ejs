<div class="header"><%- include("partials/header") %></div>

<section class="bg-gradient-to-r from-[#6dd5ed] to-[#2193b0] text-white p-12 rounded-lg my-5 text-center shadow-lg">
    <h1 class="m-0 text-3xl font-semibold">Contact us</h1>
    <p class="text-sm opacity-95 mt-2"><%= contactContent %></p>
</section>

<main class="grid gap-6 items-stretch mb-6 md:[grid-template-columns:1fr_320px] max-w-[1500px] mx-auto p-4">
    <div>
        <div class="bg-white rounded-lg p-6 shadow-md border border-slate-100 contact-info h-full">
            <div class="flex gap-2 items-center text-slate-600 text-sm my-3">
                <svg class="w-4 h-4 fill-current text-blue-600 mr-2 align-middle" viewBox="0 0 24 24"><path d="M12 2C8.1 2 5 5.1 5 9c0 5.2 7 13 7 13s7-7.8 7-13c0-3.9-3.1-7-7-7zM12 11.5c-1.4 0-2.5-1.1-2.5-2.5S10.6 6.5 12 6.5 14.5 7.6 14.5 9 13.4 11.5 12 11.5z"/></svg>
                <div>
                    <strong class="block">Our Office</strong>
                    <span class="block">239 Huay Kaew Rd, Suthep, Mueang Chiang Mai District, Chiang Mai 50200</span>
                </div>
            </div>

            <div class="flex gap-2 items-center text-slate-600 text-sm my-3">
                <svg class="w-4 h-4 fill-current text-blue-600 mr-2 align-middle" viewBox="0 0 24 24"><path d="M21 8V7l-3 2-2-1-6 6c-1.5-0.5-3.4-1.5-5-3s-2.5-3.5-3-5L5 3l2-1h1c4 0 8 4 10 8 2 4 1 6 1 6s1-3 1-7z"/></svg>
                <div>
                    <strong class="block">Phone</strong>
                    <span class="block">+66 53 123 4567</span>
                </div>
            </div>

            <div class="flex gap-2 items-center text-slate-600 text-sm my-3">
                <svg class="w-4 h-4 fill-current text-blue-600 mr-2 align-middle" viewBox="0 0 24 24"><path d="M12 13.5l8-6V6H4v1.5l8 6zM4 8.5v8.5h16v-8.5l-8 6-8-6z"/></svg>
                <div>
                    <strong class="block">Email</strong>
                    <span class="block">puri_s@cmu.ac.th</span>
                </div>
            </div>

            <p class="mt-3 text-slate-600">If you'd like a quick reply, use the form to the right or email us directly. We'll respond within 1-2 business days.</p>

            <div class="mt-4 rounded-lg overflow-hidden h-48 border border-slate-100">
                <iframe class="w-full h-full" frameborder="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3776.948292656033!2d98.94811817547027!3d18.800457560564382!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x30da3a6bf542deb3%3A0x85fbac3033920444!2sCollege%20of%20Arts%2C%20Media%20and%20Technology%2C%20Chiang%20Mai%20University!5e0!3m2!1sen!2sth!4v1768494946622!5m2!1sen!2sth" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>

    <aside>
        <div class="bg-white rounded-lg p-6 shadow-md border border-slate-100 h-full max-w-[1000px]">
            <form action="/contact" method="post" novalidate>
                <label for="name" class="block font-semibold mb-2">Name</label>
                <input id="name" name="name" type="text" placeholder="Your name" required class="w-full px-3 py-2 rounded-lg border border-slate-200 bg-white mb-3 text-sm" />

                <label for="email" class="block font-semibold mb-2">Email</label>
                <input id="email" name="email" type="email" placeholder="you@domain.com" required class="w-full px-3 py-2 rounded-lg border border-slate-200 bg-white mb-3 text-sm" />

                <label for="message" class="block font-semibold mb-2">Message</label>
                <textarea id="message" name="message" placeholder="How can we help?" required class="w-full px-3 py-2 rounded-lg border border-slate-200 bg-white mb-3 text-sm min-h-[120px] resize-y"></textarea>

                <div class="flex gap-2 items-center mt-2">
                    <button class="bg-[#2193b0] text-white px-4 py-2 rounded-lg font-semibold" type="submit">Send message</button>
                    <span class="text-sm text-slate-500">We respect your privacy.</span>
                </div>
            </form>
        </div>
    </aside>
</main>

<script>
(function(){
  function syncHeights(){
    const header = document.querySelector('section.bg-gradient-to-r');
    const main = document.querySelector('main');
    if(header && main){
      main.style.minHeight = header.getBoundingClientRect().height + 'px';
    }
  }
  window.addEventListener('load', syncHeights);
  window.addEventListener('resize', syncHeights);
  document.addEventListener('DOMContentLoaded', syncHeights);
})();
</script>

<%- include("partials/footer") %>
