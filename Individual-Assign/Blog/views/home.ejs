<div class="header"><%- include("partials/header") %></div>

<!-- Hero Section - Smaller -->
<div class="bg-gradient-to-br min-h-screen">
  <section class="bg-gradient-to-r from-[#6dd5ed] via-[#42b3d5] to-[#2193b0] text-white p-8 md:p-10 rounded-2xl my-6 mx-4 md:mx-8 text-center shadow-xl relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute top-0 right-0 w-48 h-48 bg-white/10 rounded-full blur-3xl -mr-24 -mt-24"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-white/5 rounded-full blur-3xl -ml-32 -mb-32"></div>
    
    <div class="relative z-10">
      <h1 class="m-0 text-3xl md:text-4xl font-bold tracking-tight mb-3">Home</h1>
      <p class="text-base md:text-lg opacity-95 mt-2 max-w-2xl mx-auto leading-relaxed"><%= startingContent %></p>
    </div>
  </section>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8 pb-12">
    <!-- Header with CTA -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-8 gap-4">
      <div>
        <h2 class="text-3xl font-bold text-gray-800 m-0">Recent Posts</h2>
        <p class="text-gray-600 mt-1">Discover the latest stories and insights</p>
      </div>
      <a href="/compose" 
         class="inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-[#2193b0] to-[#6dd5ed] text-white font-semibold 
                px-6 py-3 shadow-lg hover:shadow-xl 
                hover:scale-105 active:scale-95 
                transition-all duration-200 
                focus:outline-none focus:ring-4 focus:ring-[#2193b0]/30
                whitespace-nowrap">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Compose New Post
      </a>
    </div>

    <!-- Posts Grid -->
    <% if (posts.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% posts.forEach(function(post) { %>
          <div data-post-container 
               class="bg-white border-2 border-gray-100 rounded-xl shadow-md hover:shadow-xl 
                      p-6 flex flex-col justify-between transition-all duration-300 
                      hover:-translate-y-1 group">
            <!-- Post Content -->
            <div>
              <h3 class="text-xl font-bold mb-3 text-gray-800 leading-tight">
                <a href="/posts/<%= post.title %>" 
                   class="hover:text-[#2193b0] transition-colors duration-200">
                  <%= post.title %>
                </a>
              </h3>
              <p class="text-gray-600 mb-4 leading-relaxed line-clamp-4">
                <% 
                  var excerpt = (post.body || '');
                  if (excerpt.length > 150) { 
                    excerpt = excerpt.substring(0, 150) + '...'; 
                  }
                %>
                <%= excerpt %>
              </p>
            </div>

            <!-- Post Footer -->
            <div class="mt-6 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between mb-3">
                <div class="flex items-center gap-2 text-gray-600">
                  <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-sm font-semibold likes-count" data-post-id="<%= post.id %>">
                    <%= post.likes %>
                  </span>
                </div>
                <span class="text-xs text-gray-400 font-medium">
                  <!-- Optional: Add post date here -->
                </span>
              </div>
              
              <div class="flex items-center gap-2">
                <button type="button" 
                        class="like-btn flex-1 bg-gradient-to-r from-red-500 to-pink-500 text-white px-4 py-2 rounded-lg 
                               hover:from-red-600 hover:to-pink-600 
                               transition-all duration-200 font-medium text-sm
                               focus:outline-none focus:ring-2 focus:ring-red-400
                               active:scale-95" 
                        data-post-id="<%= post.id %>">
                  <span class="flex items-center justify-center gap-1">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                    </svg>
                    Like
                  </span>
                </button>
                <a href="/posts/<%= post.title %>" 
                   class="flex-1 text-center bg-gray-100 text-gray-700 px-4 py-2 rounded-lg 
                          hover:bg-gray-200 transition-all duration-200 font-medium text-sm
                          group-hover:bg-[#2193b0] group-hover:text-white">
                  Read More
                </a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="text-center py-16 bg-white rounded-xl shadow-md border-2 border-dashed border-gray-200">
        <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No Posts Yet</h3>
        <p class="text-gray-500 mb-6">Be the first to share your thoughts!</p>
        <a href="/compose" 
           class="inline-flex items-center gap-2 bg-gradient-to-r from-[#2193b0] to-[#6dd5ed] text-white font-semibold 
                  px-6 py-3 rounded-lg shadow-md hover:shadow-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Create First Post
        </a>
      </div>
    <% } %>
  </div>
</div>

<script src="/like.js" defer></script>
<%- include("partials/footer") %>