<div class="header"><%- include("partials/header") %></div>

<section class="bg-gradient-to-r from-[#6dd5ed] to-[#2193b0] text-white p-12 rounded-lg my-5 text-center shadow-lg">
    <h1 class="m-0 text-3xl font-semibold">Home</h1>
    <p class="text-sm opacity-95 mt-2"><%= startingContent %></p>
</section>

<div class="max-w-[1200px] mx-auto px-4">
  <div class="flex items-center justify-between mb-6">
      <p class="text-lg font-medium m-0">Recent Posts</p>
      <a href="/compose" class="inline-block px-4 py-2 bg-[#2193b0] text-white hover:bg-[#176f8c] rounded-md no-underline">Compose New Post</a>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% posts.forEach(function(post) { %>
      <div data-post-container class="bg-white border rounded-lg shadow-sm p-5 flex flex-col justify-between">
          <div>
            <h2 class="text-xl font-semibold mb-2"><a href="/posts/<%= post.title %>" class="hover:underline"><%= post.title %></a></h2>
            <p class="text-gray-700 mb-4 whitespace-normal break-words break-all">
              <% 
                  var excerpt = (post.body || '');
                  if (excerpt.length > 150) { excerpt = excerpt.substring(0, 150) + '...'; }
              %>
              <%= excerpt %>
            </p>
          </div>

          <div class="mt-4 flex items-center justify-between">
            <div class="text-sm text-gray-500">Likes: <span class="font-medium likes-count" data-post-id="<%= post.id %>"><%= post.likes %></span></div>
            <div class="flex items-center gap-3">
              <button type="button" class="like-btn bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600" data-post-id="<%= post.id %>">Like</button>
              <a href="/posts/<%= post.title %>" class="text-blue-600 hover:underline text-sm">Read more</a>
            </div>
          </div>
      </div>
  <% }); %>
  </div>
</div>

<script src="/like.js" defer></script>

<%- include("partials/footer") %>